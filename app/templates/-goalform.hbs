<form {{action 'saveGoal' on="submit"}} class="form-container">
  <div>
    <span class="todo-header">New Goal</span>
  </div>

  <div>{{input class="goal-input" placeholder="Goal" value=title}}</div>

  <div class="pictures">
    <div class="cards">
      <div class="card">
        <div class="card-image first" style=imageStyle>
          <img class="photo1" {{bind-attr src=model.photo1}}>
        </div>
      </div>
      <div class="card">
        <div class="card-image second" style=imageStyle>
          <img class="photo2"{{bind-attr src=model.photo2}}>
        </div>
      </div>
      <div class="card">
        <div class="card-image third" style=imageStyle>
          <img class="photo3"{{bind-attr src=model.photo3}}>
        </div>
      </div>
    </div>
  </div>

  <!-- <div class="second"><img class="edit-images second" {{!bind-attr src=session.photo1.url}}/></div> -->

  <!-- <img class="edit-images" {{!bind-attr src=session.photo2.url}} alt="" />
  <img class="edit-images" {{!bind-attr src=session.photo3.url}} alt="" /> -->

  {{!log session.photo1.url}}
  {{!log session.photo2.url}}
  {{!log session.photo3.url}}




  <button class="goal-button" type="submit" {{action 'saveGoal' on="submit"}}>Save this Goal</button>
</form>


{{outlet}}
